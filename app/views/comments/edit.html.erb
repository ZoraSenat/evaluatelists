<!-- Validation failure messages -->
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Comment #<%= @comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_comment/<%= @comment.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for data_card_id -->
      <div class="form-group">
        <label for="data_card_id" class="control-label">
          Data card
        </label>

        <%= select_tag(:data_card_id, options_from_collection_for_select(DataCard.all, :id, :title, @comment.data_card_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @comment.user_id %>">
      </div>

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @comment.title %>">
      </div>

      <button class="btn btn-warning">
        Update Comment
      </button>
      or
      <a href="/comments/<%= @comment.id %>">Cancel</a>
    </form>
  </div>
</div>
