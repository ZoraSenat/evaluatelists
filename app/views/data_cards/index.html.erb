<div class="page-header">
  <h1>
    Data cards
    <a href="/data_cards/new" class="btn btn-lg btn-success">New Data card</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>File size</th>
        <th>User</th>
        <th>Desription</th>
        <th>Subtitle</th>
        <th>File layout</th>
        <th>Market</th>
        <th>File type</th>
        <th>Image</th>
        <th>Sample download</th>
        <th>Source</th>
        <th>Actions</th>
      </tr>

      <% @data_cards.each do |data_card| %>
      <tr>
        <td><%= data_card.title %></td>
        <td><%= data_card.file_size %></td>
        <td><%= data_card.user.email %></td>
        <td><%= data_card.desription %></td>
        <td><%= data_card.subtitle %></td>
        <td><%= data_card.file_layout.file_name %></td>
        <td><%= data_card.market %></td>
        <td><%= data_card.file_type %></td>
        <td><img src='<%= data_card.image %>' class='img-responsive'></td>
        <td><%= data_card.sample_download %></td>
        <td><%= data_card.source %></td>
        <td>
          <a href="/data_cards/<%= data_card.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == data_card.user %>
            <a href="/data_cards/<%= data_card.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_data_card/<%= data_card.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @data_cards, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
