<div class="page-header">
  <h3>Rfq #<%= @rfq.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @rfq.user.present? %>
          <a href="/users/<%= @rfq.user_id %>">
            <%= @rfq.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Data card</dt>
      <dd><%= @rfq.data_card_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/rfqs" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @rfq.user %>
        <a href="/rfqs/<%= @rfq.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_rfq/<%= @rfq.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
