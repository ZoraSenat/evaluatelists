<div class="page-header">
  <h1>
    Channels
    <a href="/channels/new" class="btn btn-lg btn-success">New Channel</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.name %></td>
        <td>
          <a href="/channels/<%= channel.id %>" class="btn btn-primary">Show</a>
          <a href="/channels/<%= channel.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_channel/<%= channel.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
