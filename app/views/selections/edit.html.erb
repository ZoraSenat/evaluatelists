<!-- Validation failure messages -->
<% if @selection.errors.any? %>
  <% @selection.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Selection #<%= @selection.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_selection/<%= @selection.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for select_id -->
      <div class="form-group">
        <label for="select_id" class="control-label">
          Select
        </label>

        <%= select_tag(:select_id, options_from_collection_for_select(Select.all, :id, :name, @selection.select_id), :class => "form-control") %>
      </div>

      <!-- Label and input for data_card_id -->
      <div class="form-group">
        <label for="data_card_id" class="control-label">
          Data card
        </label>

        <%= select_tag(:data_card_id, options_from_collection_for_select(DataCard.all, :id, :title, @selection.data_card_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Selection
      </button>
      or
      <a href="/selections/<%= @selection.id %>">Cancel</a>
    </form>
  </div>
</div>
