<!-- Validation failure messages -->
<% if @selection.errors.any? %>
  <% @selection.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Selection</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_selection" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for select_id -->
      <div class="form-group">
        <label for="select_id" class="control-label">
          Select
        </label>

        <input type="text" id="select_id" name="select_id" placeholder="Select" class="form-control" value="<%= @selection.select_id %>">
      </div>

      <!-- Label and input for data_card_id -->
      <div class="form-group">
        <label for="data_card_id" class="control-label">
          Data card
        </label>

        <input type="text" id="data_card_id" name="data_card_id" placeholder="Data card" class="form-control" value="<%= @selection.data_card_id %>">
      </div>

      <button class="btn btn-success">
        Create Selection
      </button>
      or
      <a href="/selections">Cancel</a>
    </form>
  </div>
</div>
