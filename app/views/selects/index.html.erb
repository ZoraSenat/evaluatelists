<div class="page-header">
  <h1>
    Selects
    <a href="/selects/new" class="btn btn-lg btn-success">New Select</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>

      <% @selects.each do |select| %>
      <tr>
        <td><%= select.name %></td>
        <td><%= select.price %></td>
        <td>
          <a href="/selects/<%= select.id %>" class="btn btn-primary">Show</a>
          <a href="/selects/<%= select.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_select/<%= select.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
