<!-- Validation failure messages -->
<% if @channel_association.errors.any? %>
  <% @channel_association.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Channel Association</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_channel_association" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for data_card_id -->
      <div class="form-group">
        <label for="data_card_id" class="control-label">
          Data card
        </label>

        <%= select_tag(:data_card_id, options_from_collection_for_select(DataCard.all, :id, :title, @channel_association.data_card_id), :class => "form-control") %>
      </div>

      <!-- Label and input for channel_id -->
      <div class="form-group">
        <label for="channel_id" class="control-label">
          Channel
        </label>

        <input type="text" id="channel_id" name="channel_id" placeholder="Channel" class="form-control" value="<%= @channel_association.channel_id %>">
      </div>

      <button class="btn btn-success">
        Create Channel Association
      </button>
      or
      <a href="/channel_associations">Cancel</a>
    </form>
  </div>
</div>
